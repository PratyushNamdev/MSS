{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@UI": ["components/ui"],
      "@UI/*": ["components/ui/*"],
      "@layout": ["components/layout"],
      "@layout/*": ["components/layout/*"],
      "@Atoms": ["components/atoms"],
      "@Atoms/*": ["components/atoms/*"],
      "@Molecules": ["components/molecules"],
      "@Molecules/*": ["components/molecules/*"],
      "@Server": ["server"],
      "@Server/*": ["server/*"],
      "@Constants": ["constants"],
      "@Constants/*": ["constants/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
